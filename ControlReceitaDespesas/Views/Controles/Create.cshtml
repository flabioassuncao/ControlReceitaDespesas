@model ControlReceitaDespesas.Models.RecDes

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutControleF.cshtml";
}

<script type="text/javascript">function SubstituiVirgulaPorPonto(Valor) { Valor.value = Valor.value.replace(".", ","); }</script>
<!--<input type="text" onkeyup="SubstituiVirgulaPorPonto(this)" />-->

<section class="category-wrapper">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-3 col-sm-2">
            </div>
            <div class="col-md-9 col-sm-10">
                <div class="col-md-7 col-sm-11">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-2 col-sm-6">
                                        </div>
                                        <div class="col-md-8 col-sm-6">
                                            <div class="widget">
                                                <div class="widget-header">
                                                    <h3>Adicionar Registro</h3>
                                                </div>
                                                <br />
                                                <div class="widget-header">
                                                    <form>
                                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                        <div class="form-group">
                                                            <input class="form-control input-lg" required id="Valor" name="Valor" type="text" value="" onkeyup="SubstituiVirgulaPorPonto(this)" placeholder="Valor">
                                                        </div>
                                                        <div class="form-group">
                                                            <select class="form-control input-lg" id="Categoria" name="Categoria">
                                                                <option>Receita</option>
                                                                <option>Despesa</option>
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <input type="date" class="form-control input-lg" id="Data" name="Data" required>
                                                        </div>
                                                        <div class="form-group">
                                                            <input class="form-control input-lg" required id="Observacao" name="Observacao" type="text" placeholder="Observação" />
                                                        </div>
                                                        <div class="form-group">
                                                            <input style="background-color: forestgreen" type="submit" class="btn btn-block btn-custom" value="Adicionar" />
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            <div>
                                @Html.ActionLink("Voltar", "Index")
                            </div>

                            @section Scripts {
                                @Scripts.Render("~/bundles/jqueryval")
                                <script>
                                    function replaceString() {
                                        document.getElementById("Valor").innerHTML = document.getElementById("Valor").value.replace(",", ".");
                                    }
                                </script>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
