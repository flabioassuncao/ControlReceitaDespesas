<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:regular,700,600&amp;latin" type="text/css" />

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/siteFcss")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body ng-app ng-controller="InlineEditorController">
    <div class="wrapper">
        <header class="navbar navbar-default navbar-fixed-top navbar-top">
            <div class="container">
                <div class="navbar-header">
                    <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#" class="navbar-brand"><span class="logo"><i class="fa fa-calculator"></i> FinanWeb</span></a>
                </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="signup.html">Signup</a></li>
                    </ul>
                </div>
            </div>
        </header>
        <div class="category-search">
            <div class="container">
                <div class="row category-search-box">
                    <form class="text-center">
                        <h3 class="hero-title">Controle de Receitas e Despesas</h3>
                        <p class="hero-description hidden-xs">Tenha controle de gastos e ganhos de uma maneira Fácil e Rápida</p>
                    </form>
                </div>
            </div>
        </div>

        @RenderBody()

        <div class="footer">
            <div class="container">
                <ul class="pull-right footer-menu">
                    <li> &copy; @DateTime.Now.Year Flábio Assunção </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Essentials -->
    @Scripts.Render("~/bundles/siteFjs")
    @RenderSection("scripts", required: false)
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script>
    <script type="text/javascript">
            $(document).ready(function () {
                $('[data-toggle="tooltip"]').tooltip();
            });
    </script>
    <script type="text/javascript">
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-68907527-1', 'auto');
            ga('send', 'pageview');

    </script>
    <script type="text/javascript">
        function InlineEditorController($scope) {
            $scope.showtooltip = false;

            $scope.hideTooltip = function () {
                $scope.showtooltip = false;
            }

            $scope.toggleTooltip = function (e) {
                e.stopPropagation();
                $scope.showtooltip = !$scope.showtooltip;
            }
        }
    </script>
</body>
</html>
